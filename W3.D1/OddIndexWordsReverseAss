package w2.D2;

public class ReverseTheEvenWords {

	public static void main(String[] args) {
		String phrase = "I am a software Tester";
		String[] stringArray = phrase.split(" ");
		for (int i = 0; i < stringArray.length; i++) {
			if(i%2==1) {
				String evenWords = stringArray[i];
				StringBuilder x = new StringBuilder(evenWords);
				StringBuilder reverse = x.reverse();
				System.out.print(" "+reverse);
			}
				
			else {
					System.out.print(" "+stringArray[i]);					
				}				
			}
			
		}

	}


